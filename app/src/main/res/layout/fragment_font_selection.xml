<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.onBoardFragments.fontselection.FontSelectionFragment">

    <ImageView
        android:id="@+id/top_background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/background_image_big" />

    <ImageView
        android:id="@+id/bottom_background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/background_image_small" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/_____1" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/_____1" />

            <ImageView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/_____2" />

        </LinearLayout>

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/left_arrow" />


        <LinearLayout
            android:id="@+id/linear_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choose_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_choose_font_size"
                android:textColor="@color/blue"
                android:textSize="30sp"
                android:textStyle="bold" />

            </LinearLayout>

        <LinearLayout
            android:id="@+id/liner_with_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:transitionName="buttons">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/big_size"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:background="@drawable/rounder_for_transparent_button"
                android:text="@string/btn_big_size"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/standard_size"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounder_for_transparent_button"
                android:text="@string/btn_standart_size"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/example_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:text="@string/tv_example_text_size"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounder_for_continue_button"
        android:backgroundTint="@color/blue"
        android:paddingHorizontal="20dp"
        android:text="@string/btn_continue_text"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:visibility="invisible"
        app:cornerRadius="15dp" />

</FrameLayout>